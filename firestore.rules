rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write;
    }
  }
}

service cloud.firestore {
  match /databases/{database}/documents {
    match /{usuarios=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /{color=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /{etiqueta=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /{fase=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /{order=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /{perfil=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /{prioridades=**} {
      allow read, write: if request.auth.uid != null;
    }
  	match /{retard=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /{subtarefa_insert=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /{tasks=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /{grupoEmail=**} {
      allow read, write;
    }
    match /{version=**} {
      allow read, write;
    }
  }
}
